<%- include("../partials/header") %>

<h2>Request Care</h2>

<h5>Please provide the following care information:</h5>

<form id="new-childcare-request-form" action="/children" method="POST">
    <label>Date of care</label>
    <input type="date" name="date"><br>
    <label>Hours/duration of care</label>
    <input type="text" name="time" style="width:26.1vmin"><br>
    <label>Location</label>
    <input type="text" name="location" style="width:40.5vmin"><br>
    <label>Number of kids</label>
    <input type="number" name="numOfKids" style="width:16vmin"><br>
    <label>Names & ages of kids</label>
    <input type="text" name="namesAgesOfKids" style="width:42vmin"><br>
    <label>Special instructions</label>
    <input type="text" name="specialInstructions" style="width:45vmin"><br>
    <input class="btn" type="submit" value="Submit care request">
</form>

<%- include("../partials/footer") %>